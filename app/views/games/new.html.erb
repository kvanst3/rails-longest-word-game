<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="container">
  <h1>Games#new</h1>
  <p>Find me in app/views/games/new.html.erb</p>


  <ol class = "d-flex">
    <% array_letters = @letters%>
    <% payload = [] %>
    <% 10.times do%>
      <% letter = array_letters.sample %>
      <% payload << letter %>
      <% array_letters.delete(letter) %>
      <div class="m-2"> <%= letter %></div>
    <% end %>
  </ol>

  <% generated = payload.join %>

  </br>
  <p>What is the longest word you can find?</p>

  <form action="score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="result">
    <input type="hidden" name="payload" value=<%= generated %>>
    <input type="submit" value="Ask!">
  </form>
</div>
